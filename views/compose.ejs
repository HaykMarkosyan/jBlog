<%- include("partials/header") -%>

<center>
<h2 class="display-4" >Compose</h2>

<br>
<br>
<h4 class="display-6" >Make your post</h4>
<hr style="width: 54%;">
</center><br><br>

<div class="container" style="width: 75%;">

  <form class="" action="/compose" method="POST">
    <div class="form-group">
      <label>Post Title</label>
      <input class="form-control" type="text" name="postTitle">
      <label>Post (text)</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      <br>
      <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Options</label>
          <select class="form-select" id="inputGroupSelect01" name="color">
            <option selected>Choose...(Primary)</option>
            <option value="1">Primary</option>
            <option value="2">Secondary</option>
            <option value="3">Success</option>
            <option value="3">Danger</option>
            <option value="3">Warning</option>
            <option value="3">Info</option>
            <option value="3">Light</option>
            <option value="3">Dark</option>
          </select>
      </div>
    </div>
    <br>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

</div>

<%- include("partials/footer") -%>
